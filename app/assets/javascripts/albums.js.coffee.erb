jQuery ->
	$('a.colorbox').colorbox({maxWidth:"90%", maxHeight:"90%"})
	$gallery = $("a[rel=gallery]").colorbox({maxWidth:"90%", maxHeight:"90%",slideshow:true})
	$("a#openGallery").click (e) ->
	  e.preventDefault()
	  $gallery.eq(0).click()