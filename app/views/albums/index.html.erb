<% content_for :sidebar do %>
  <div class="span2">
    <ul class="nav nav-pills nav-stacked">
        <li>
          <%= link_to 'New Album', new_album_path %>
        </li>
    </ul>
  </div>
<% end %>

<div class="span10">
  <h1>Listing albums</h1>
  <ul class="thumbnails">
    <% @albums.each do |album| %>
    <li class="span3">
      <div class="thumbnail">
        <% if album.media.first.present? %>
          <%= link_to((image_tag (album.media.first.attachment_url(:thumb).to_s)), album) %>
        <% else %>
          <%= link_to((image_tag (asset_path("fallback/default.jpg"))), album) %>
        <% end %>
        <div class="caption">
          <h3 style="display:inline;"><%= album.title %></h3>
          <p style="float:right;line-height:27px;"><%= link_to 'Show', album %> <%= link_to 'Edit', edit_album_path(album) %> <%= link_to 'Destroy', album, confirm: 'Are you sure?', method: :delete %></p>
        </div>
      </div>
    </li>
    <% end %>
  </ul>
</div>


